{
      "version": "2.0.0",
      "tasks": [
        {
          "type": "shell",//какая консоль
          "label": "g++.exe build active file",
          "command": "g++",
          "args": [
            "-std=c++20", //стандарт
            "-g", // для отладки нужен
            "main.cpp",
            "IntegerArray.cpp",
            "-o",//для изменения имени
            "${workspaceFolder}/a.exe"//выходной файл
          ],
          "options": {
            "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [
            "$gcc"
          ],
          "group": {
            "kind": "build",
            "isDefault": true
          }
        },
        // Новая задача для очистки консоли
        {
          "label": "clear-console",
          "type": "shell",
          "command": "cls || clear", // Универсальная команда для Windows и Unix
          "windows": {
              "command": "cls"
          },
          "linux": {
              "command": "clear"
          },
          "osx": {
              "command": "clear"
          },
          "group": "none"
      }
      ]
    }